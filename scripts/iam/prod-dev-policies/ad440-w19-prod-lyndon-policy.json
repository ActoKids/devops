{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "apigateway:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "kms:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "route53:*"
            ],
            "Resource": 
                "*", 
                "Condition": {
                    "StringEquals": {
                        "aws:RequestedRegion": "us-east-2"
                    }
                }
            
        },
        {
            "Effect": "Allow",
            "Action": [
                "lambda:UpdateEventSourceMapping",
                "lambda:List*",
                "lambda:Get*",
                "lambda:CreateEventSourceMapping",
                "lambda:PublishLayerVersion",
                "lambda:AddPermission",
                "lambda:AddLayerVersionPermission",
                "lambda:RemovePermission",
                "lambda:CreateFunction",
                "lambda:TagResource",
                "lambda:InvokeAsync",
                "lambda:UntagResource",
                "lambda:PutFunctionConcurrency",
                "lambda:DeleteLayerVersion",
                "lambda:DeleteFunction",
                "lambda:InvokeFunction",
                "lambda:UpdateFunctionConfiguration",
                "lambda:UpdateAlias",
                "lambda:UpdateFunctionCode",
                "lambda:DeleteAlias",
                "lambda:PublishVersion",
                "lambda:DeleteFunctionConcurrency",
                "lambda:DeleteEventSourceMapping",
                "lambda:CreateAlias"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": "lambda:PublishLayerVersion",
            "Resource": "arn:aws:lambda:us-east-2:<SCHOOL_ACCT_NUMBER>:layer:*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "lambda:AddPermission",
                "lambda:AddLayerVersionPermission",
                "lambda:RemovePermission"
            ],
            "Resource": [
                "arn:aws:lambda:us-east-2:<SCHOOL_ACCT_NUMBER>:function:*",
                "arn:aws:lambda:us-east-2:<SCHOOL_ACCT_NUMBER>:layer:*:*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "lambda:AddPermission",
                "lambda:PublishLayerVersion",
                "lambda:AddLayerVersionPermission",
                "lambda:RemovePermission"
            ],
            "Resource": "arn:aws:lambda:us-east-2:<SCHOOL_ACCT_NUMBER>:layer:*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "cloudformation:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "cloudwatch:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "dynamodb:*"
            ],
            "Resource": 
                "*", 
                "Condition": {
                    "StringEquals": {
                        "aws:RequestedRegion": "us-east-2"
                    }
                }
            
        },
        {
            "Effect": "Allow",
            "Action": [
                "lightsail:*"
            ],
            "Resource": 
                "*", 
                "Condition": {
                    "StringEquals": {
                        "aws:RequestedRegion": "us-east-2"
                    }
                }
            
        },
        {
            "Effect": "Allow",
            "Action": [
                "cognito:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "sqs:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "sns:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "iam:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "acm:*"
            ],
            "Resource": 
                "*", 
                "Condition": {
                    "StringEquals": {
                        "aws:RequestedRegion": "us-east-2"
                    }
                }
        }
    ]
}